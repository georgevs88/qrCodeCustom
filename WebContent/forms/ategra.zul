<?page title="Gráfico Atendimento Empreendimento" cacheable="false" language="xul/html" zscriptLanguage="Java" contentType="text/html;charset=UTF-8"?>
<zk xmlns="http://www.zkoss.org/2005/zul" xmlns:h="http://www.w3.org/1999/xhtml"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.zkoss.org/2005/zul http://www.zkoss.org/2005/zul/zul.xsd">

	<window use="pmcg.imti.view.Ategra" id="wGra" title="Gráfico Atendimento Alterações" width="338px" height="320px" border="normal" shadow="false" position="center"
		mode="overlapped" sizable="false" closable="true" onCreate="wGra.initComponentes()" contentStyle="overflow:auto;">
		<grid style="margin: 30px 10px 10px;">
	    	<columns>
	    		<column align="right" width="120px"/>
	    		<column />
	    	</columns>
	    	<rows>
	    		<row style="padding:3px;">
	    			<label value="Tipo Gráfico:" style="font-size:16px;"/>
					<combobox class="cmbzk" readonly="true" width="110px" value="@{wGra.tipoGrafico}">
						<comboitem value="LINHA" label="LINHA" />
						<comboitem value="BARRA" label="BARRA" />
					</combobox>
				</row>
				<row>
	    			<label value="Mês" style="font-size:16px;"/>
	    			<intbox id="mes" value="@{wGra.mes}" style="text-align:center;"/>
				</row>
				<row spans="2">
					<label value="Obs: Para gráfico anual deixar o campo 'Mês' vazio." style="font-size:9px;color:red;"/>
				</row>
				<row>
	    			<label value="Ano:" style="font-size:16px;"/>
					<intbox id="ano" value="@{wGra.ano}" style="text-align:center;"/>
				</row>
			</rows>
		</grid>
		<div align="center">
			<a onClick="wGra.imprimir()">
				<h:button class="btn btn-lg btn-default">
					<span class="glyphicon glyphicon-print"></span>
					Imprimir
				</h:button>
			</a>
		</div>
		<style src="/ext/cimweb_ext.css"></style>
		<style src="/css/bootstrap.min.css"></style>
		<style src="/css/componentes.css"></style>
		<script src="https://ajax.googleapis.com/ajax/libs/jquery/1.11.3/jquery.min.js"></script>
    	<script src="/js/bootstrap.min.js"></script>
	</window>
</zk>
