<?page id="testZul" title="Cadastro de Usuário" cacheable="false" 
	language="xul/html" zscriptLanguage="Java" contentType="text/html;charset=UTF-8"?>

<zk xmlns="http://www.zkoss.org/2005/zul"
	xmlns:h="http://www.w3.org/1999/xhtml"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.zkoss.org/2005/zul http://www.zkoss.org/2005/zul/zul.xsd">
	<window use="pmcg.imti.view.Usucad" id="wUsu" title="Cadastro de Usuário" border="normal" shadow="false" width="800px"
		height="600px" position="center" mode="overlapped" sizable="false" closable="false" onCreate="wUsu.initComponentes()" contentStyle="overflow:auto;">
		<separator height="7px"/>
		<grid>
			<columns>
				<column width="125px" align="right" />
				<column width="140px"/>
				<column width="137px" align="right" />
				<column width="120px"/>
				<column width="137px" align="right" />
				<column />
			</columns>
			<rows>
				<row spans="6">
					<div style="background:rgb(113, 175, 255);padding:5px" align="left">
						<label value="Informações Pessoais" style="color:white;font-weight:bold;font-size:14px;" />
					</div>
				</row>
				<row>
					<label value="CPF:" />
					<textbox id="cpfcad" value="@{wUsu.cadVO.cpfcad}" width="100px" disabled="true"/>
					Data de Nascimento
					<datebox id="dnacad" value="@{wUsu.cadVO.dnacad}" width="90px"/>
					Sexo
					<combobox id="sexcad" class="cmbzk" readonly="true" width="100px" selectedItem="@{wUsu.cadVO.sexcad}"> 
						<comboitem value="M" label="MASCULINO"/>
						<comboitem value="F" label="FEMININO"/>
					</combobox>
				</row>
				<row spans="1,5">
					Nome
			        <textbox id="nome" value="@{wUsu.cadVO.nomcad}" width="600px" style="text-transform:uppercase;"/>
				</row>
				<row spans="6">
					<div style="background:rgb(113, 175, 255);padding:5px" align="left">
						<label value="Documento de Identificação" style="color:white;font-weight:bold;font-size:14px;" />
					</div>
				</row>
				<row>
					Tipo
		        	<combobox id="dtpcad" class="cmbzk" readonly="true" width="100%" selectedItem="@{wUsu.cadVO.dtpcad}">
						<comboitem value="RG" label="Registro Geral - RG" />
						<comboitem value="RM" label="Registro Militar - RM" />
						<comboitem value="RNE" label="Registro Nacional de Estrangeiro - RNE" />
					</combobox>
		        	Número
		        	<textbox id="dnrcad" width="100px" value="@{wUsu.cadVO.dnrcad}"/>
			    </row>
			    <row>
			    	Órgão Expedidor
			        <hbox>
						<textbox id="doecad" value="@{wUsu.cadVO.doecad}" width="55px"/>
						<label value="UF"/>
						<combobox id="duocad" class="cmbzk" model="@{wUsu.listUf}" readonly="true" width="45px">
							<comboitem self="@{each=ufo}" style="text-transform:uppercase" label="@{ufo.unifed}" value="@{ufo}" />
						</combobox>
					</hbox>
			        Data de Expedição
			        <datebox id="dexcad" value="@{wUsu.cadVO.dexcad}" width="90px"/>
			    </row>
				<row spans="6">
					<div style="background:rgb(113, 175, 255);padding:5px" align="left">
						<label value="Endereço" style="color:white;font-weight:bold;font-size:14px;" />
					</div>
				</row>
				<row spans="1,1,1,3">
			    	CEP
			    	<textbox id="cepcor" maxlength="10" value="@{wUsu.endereco.cepedr}" width="65px" style="text-align:center;"/>
			    	UF / Cidade
			    	<hbox>
						<combobox id="uffedr" class="cmbzk" model="@{wUsu.listUf}" readonly="true" width="45px" onSelect="wUsu.listarCidades()">
							<comboitem self="@{each=ufc}" style="text-transform:uppercase" label="@{ufc.unifed}" value="@{ufc}" />
						</combobox>
						<combobox class="cmbzk" id="munedr" model="@{wUsu.listCid}" selectedItem="@{wUsu.cidSel}" readonly="true" width="200px">
							<comboitem self="@{each=cid}" style="text-transform:uppercase" label="@{cid.nomcom}" value="@{cid}" />
						</combobox>
				    </hbox>
			    </row>
			    <row spans="1,1,2,1,1">
			    	Logradouro
			    	<combobox id="tloedr" class="cmbzk" model="@{wUsu.listTipLog}" readonly="true" width="100%">
						<comboitem self="@{each=tlo}" style="text-transform:uppercase" label="@{tlo.descom}" value="@{tlo}" />
					</combobox>
					<textbox id="nloedr" width="243px" value="@{wUsu.endereco.nloedr}"/>
					Número
					<textbox id="numedr" width="60px" value="@{wUsu.endereco.numedr}"/>
				</row>
			    <row spans="1,1,2,1,1">
			    	Bairro
			    	<combobox id="tbaedr" class="cmbzk" model="@{wUsu.listTipBai}" readonly="true" width="100%">
						<comboitem self="@{each=tba}" style="text-transform:uppercase" label="@{tba.descom}" value="@{tba}" />
					</combobox>
			    	<textbox id="baiedr" width="243px" value="@{wUsu.endereco.baiedr}"/>
				</row>
			    <row spans="1,5">
			    	Complemento
				    <textbox width="600px" value="@{wUsu.endereco.comedr}"/>
				</row>
				<row spans="6">
					<div style="background:rgb(113, 175, 255);padding:5px" align="left">
						<label value="Informações para contato" style="color:white;font-weight:bold;font-size:14px;" />
					</div>
				</row>
				<row>
			    	Telefone/Ramal
			        <hbox>
						<textbox id="dddtel" width="18px" value="@{wUsu.cadVO.ddtcad}" maxlength="2" style="text-align: center;"/>
						<textbox id="telcad" value="@{wUsu.cadVO.telcad}" width="65px"/>
						<label value=" /"/>
						<textbox id="ramal" width="30px" value="@{wUsu.cadVO.ramcad}" maxlength="4" style="text-align: center;"/>
					</hbox>
	        		Celular
	        		<hbox>
						<textbox id="dddcel" width="18px" value="@{wUsu.cadVO.ddccad}" maxlength="2" style="text-align: center;"/>
						<textbox id="celcad" value="@{wUsu.cadVO.celcad}" width="65px"/>
					</hbox>
	        		Fax
	        		<hbox>
						<textbox id="dddfax" width="18px" value="@{wUsu.cadVO.ddfcad}" maxlength="2" style="text-align: center;"/>
						<textbox id="faxcad" value="@{wUsu.cadVO.faxcad}" width="65px"/>
					</hbox>
			    </row>
			    <row spans="1,6">
	    			E-mail
	            	<textbox id="email" width="300px" value="@{wUsu.cadVO.emacad}" style="text-transform:lowercase;"/>
		    	</row>
				<row spans="6">
					<div style="background:rgb(113, 175, 255);padding:5px" align="left">
						<label value="Responsável Contábil" style="color:white;font-weight:bold;font-size:14px;" />
					</div>
				</row>
				<row spans="6">
					<div align="left">
						<hbox>
				    		<checkbox id="checkRespCont" checked="@{wUsu.respCont}" onCheck="wUsu.vincular()"/>
					        É Responsável Contábil?
					    </hbox>
				    </div>
			    </row>
			    <row spans="1,1,1,3">
    	    		CPF/CNPJ
	        		<textbox id="cpccad" value="@{wUsu.cadVO.cpccad}" width="115px"/>
	        		Nome/Razão Social
	        		<textbox id="nrscad" width="325px" value="@{wUsu.cadVO.nrscad}"/>
			    </row>
			    <row>
	        		Tipo CRC
	        		<combobox class="cmbzk" id="tpccad" width="100%" readonly="true" selectedItem="@{wUsu.cadVO.tpccad}">
						<comboitem value="C" label='Contabilista' />
						<comboitem value="EC" label='Escritório de Contabilidade' />
						<comboitem value="EI" label='Escritório Individual' />
					</combobox>
	        		Número CRC
	        		<hbox>
						<textbox id="crccad" width="55px" maxlength="6" value="@{wUsu.cadVO.crccad}"/>
						<combobox class="cmbzk" id="scrcad" width="40px" readonly="true" selectedItem="@{wUsu.cadVO.scrcad}">
							<comboitem value="O" label='O' />
							<comboitem value="T" label='T' />
							<comboitem value="S" label='S' />
							<comboitem value="P" label='P' />
							<comboitem value="F" label='F' />
						</combobox>
					</hbox>
				</row>
			    <row>
    	    		Data Registro
	        		<datebox width="90px" id="dtrcad" value="@{wUsu.cadVO.dtrcad}"/>
	        		UF
	        		<combobox class="cmbzk" id="ufccad" width="45px" readonly="true" selectedItem="@{wUsu.cadVO.ufccad}">
						<comboitem value='AC' label='AC'/>
						<comboitem value='AL' label='AL'/>
						<comboitem value='AM' label='AM'/>
						<comboitem value='AP' label='AP'/>
						<comboitem value='BA' label='BA'/>
						<comboitem value='CE' label='CE'/>
						<comboitem value='DF' label='DF'/>
						<comboitem value='ES' label='ES'/>
						<comboitem value='GO' label='GO'/>
						<comboitem value='MA' label='MA'/>
						<comboitem value='MG' label='MG'/>
						<comboitem value='MS' label='MS'/>
						<comboitem value='MT' label='MT'/>
						<comboitem value='PA' label='PA'/>
						<comboitem value='PB' label='PB'/>
						<comboitem value='PE' label='PE'/>
						<comboitem value='PI' label='PI'/>
						<comboitem value='PR' label='PR'/>
						<comboitem value='RJ' label='RJ'/>
						<comboitem value='RN' label='RN'/>
						<comboitem value='RO' label='RO'/>
						<comboitem value='RR' label='RR'/>
						<comboitem value='RS' label='RS'/>
						<comboitem value='SC' label='SC'/>
						<comboitem value='SE' label='SE'/>
						<comboitem value='SP' label='SP'/>
						<comboitem value='TO' label='TO'/>
					</combobox>
				</row>
			</rows>
		</grid>
	</window>
</zk>