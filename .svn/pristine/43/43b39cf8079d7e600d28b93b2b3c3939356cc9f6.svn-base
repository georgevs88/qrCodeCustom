<?xml version="1.0" encoding="UTF-8"?> 
 <!DOCTYPE sqlMap PUBLIC "//iBATIS.com//DTD SQL Map 2.0//EN" "HTTP://ibatis.apache.org/dtd/sql-map-2.dtd" >
<sqlMap namespace="Zus">
	<typeAlias alias="ZusVO" type="pmcg.fcn.domain.ZusVO" />


	<resultMap id="mapComplexQuerySimple" class="ZusVO">
		<result property="iddzus" column="iddzus" />
		<result property="zonzus" column="zonzus" />
		<result property="usozus" column="usozus" />
		<result property="usualt" column="usualt" />
		<result property="datalt" column="datalt" />
	</resultMap>

	<resultMap id="mapComplexQuery" class="ZusVO">
		<result property="iddzus" column="iddzus" />
		<result property="zonzus" column="zonzus" />
		<result property="usozus" column="usozus" />
		<result property="usualt" column="usualt" />
		<result property="datalt" column="datalt" />
	</resultMap>

	<select id="getRegByCod" parameterClass="Double" resultMap="mapComplexQuerySimple">
		SELECT * FROM fcn.fcnzus WHERE iddzus = #value:NUMERIC#
	</select>

	<select id="getRegByCodComplex" parameterClass="Double" resultMap="mapComplexQuery">
		SELECT * FROM fcn.fcnzus WHERE iddzus = #value:NUMERIC#
	</select>

	<select id="getRegByCriterio" parameterClass="ZusVO" resultMap="mapComplexQuerySimple">
		SELECT * FROM fcn.fcnzus
		<dynamic prepend=" WHERE ">
			<isNotNull property="iddzus" prepend=" AND ">
				iddzus = #iddzus:NUMERIC#
			</isNotNull>
			<isNotNull property="zonzus" prepend=" AND ">
				zonzus ILIKE '%' || #zonzus:VARCHAR# || '%'
			</isNotNull>
			<isNotNull property="usozus" prepend=" AND ">
				usozus ILIKE '%' || #usozus:VARCHAR# || '%'
			</isNotNull>
			<isNotNull property="usualt" prepend=" AND ">
				usualt ILIKE '%' || #usualt:VARCHAR# || '%'
			</isNotNull>
			<isNotNull property="datalt" prepend=" AND "> to_char(datalt,'dd/MM/yyyy') =
				to_char(#datalt:TIMESTAMP#,'dd/MM/yyyy')
			</isNotNull>
		</dynamic>
	</select>

	<select id="getRegByCriterioComplex" parameterClass="ZusVO" resultMap="mapComplexQuery">
		SELECT * FROM fcn.fcnzus
		<dynamic prepend=" WHERE ">
			<isNotNull property="iddzus" prepend=" AND "> iddzus = #iddzus:NUMERIC#
			</isNotNull>
			<isNotNull property="zonzus" prepend=" AND ">
				zonzus ILIKE '%' || #zonzus:VARCHAR# || '%'
			</isNotNull>
			<isNotNull property="usozus" prepend=" AND ">
				usozus ILIKE '%' || #usozus:VARCHAR# || '%'
			</isNotNull>
			<isNotNull property="usualt" prepend=" AND ">
				usualt ILIKE '%' || #usualt:VARCHAR# || '%'
			</isNotNull>
			<isNotNull property="datalt" prepend=" AND "> to_char(datalt,'dd/MM/yyyy') =
				to_char(#datalt:TIMESTAMP#,'dd/MM/yyyy')
			</isNotNull>
		</dynamic>
	</select>

	<select id="getTodos" resultMap="mapComplexQuerySimple">
		SELECT * FROM fcn.fcnzus
	</select>

	<insert id="insReg" parameterClass="ZusVO">
		<selectKey keyProperty="iddzus" resultClass="Double">
			SELECT NEXTVAL('fcn.seqzus')
		</selectKey>
		INSERT INTO fcn.fcnzus(iddzus,zonzus,usozus,usualt,datalt) VALUES (#iddzus:NUMERIC#, UPPER(#zonzus:VARCHAR#),
		UPPER(#usozus:VARCHAR#), UPPER(#usualt:VARCHAR#),now() )
	</insert>

	<update id="updRegByCod" parameterClass="ZusVO">
		UPDATE fcn.fcnzus SET zonzus= UPPER(#zonzus:VARCHAR#),usozus= UPPER(#usozus:VARCHAR#),usualt= UPPER(#usualt:VARCHAR#),datalt=
		now() WHERE iddzus = #iddzus:NUMERIC#
	</update>
	<delete id="delByCod" parameterClass="Double">
		DELETE FROM fcn.fcnzus WHERE iddzus = #value:NUMERIC#
	</delete>
	<delete id="delByCodigos" parameterClass="String">
		DELETE FROM fcn.fcnzus WHERE iddzus in ($value$)
	</delete>

	<select id="getCountByCriterio" parameterClass="ZusVO" resultClass="Integer">
		SELECT count(iddzus) FROM fcn.fcnzus
		<dynamic prepend=" WHERE ">
			<isNotNull property="iddzus" prepend=" AND "> iddzus = #iddzus:NUMERIC#
			</isNotNull>
			<isNotNull property="zonzus" prepend=" AND ">
				zonzus ILIKE '%' || #zonzus:VARCHAR# || '%'
			</isNotNull>
			<isNotNull property="usozus" prepend=" AND ">
				usozus ILIKE '%' || #usozus:VARCHAR# || '%'
			</isNotNull>
			<isNotNull property="usualt" prepend=" AND ">
				usualt ILIKE '%' || #usualt:VARCHAR# || '%'
			</isNotNull>
			<isNotNull property="datalt" prepend=" AND "> to_char(datalt,'dd/MM/yyyy') =
				to_char(#datalt:TIMESTAMP#,'dd/MM/yyyy')
			</isNotNull>
		</dynamic>
	</select>
</sqlMap> 
 