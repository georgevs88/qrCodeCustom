<?page title="Busca de Inscrição Imobiliária"?>
<zk xmlns="http://www.zkoss.org/2005/zul"
	xmlns:h="http://www.w3.org/1999/xhtml"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-infabnce"
	xsi:schemaLocation="http://www.zkoss.org/2005/zul http://www.zkoss.org/2005/zul/zul.xsd">
	<window use="pmcg.imti.view.Simlis" id="lis" title="Inscrição Imobiliária" border="normal" shadow="false" width="900px"
		height="587px" position="center" mode="overlapped" sizable="false" closable="true" onCreate="lis.initComponentes()">
		<grid>
			<columns>
				<column label="" width="140px" align="right"/>
				<column label="" width="140px"/>
				<column label="" width="250px"/>
				<column label="" width="40px" align="right"/>
				<column label="" width="70px" />
				<column label="" width="246px" align="center"/>
			</columns>
			<rows>
				<row style="background:#eaeaea" spans="1,1,1,1,2">
					<label value="Endereço"/>
					<combobox id="tplog" class="cmbzk" model="@{lis.listTpLVO}" readonly="true"	selectedItem="@{lis.tplVO}" width="120px">
						<comboitem self="@{each=tpl}" style="text-transform:uppercase" label="@{tpl.codigo}" value="@{tpl}" />
					</combobox>
					<textbox id="log" value="@{lis.logradouro}" width="235px" style="text-transform:uppercase" onOK="lis.pesquisar()"/>
					<label value="Nº"/>
					<intbox id="numero" width="60px" value="@{lis.numero}" onOK="lis.pesquisar()"/>
				</row>
				<row style="background:#eaeaea" spans="1,1,3,1">
					<label value="Bairro"/>
					<combobox id="tpbai" class="cmbzk" model="@{lis.listTpBVO}" readonly="true"	selectedItem="@{lis.tpbVO}" width="120px">
						<comboitem self="@{each=tpb}" style="text-transform:uppercase" label="@{tpb.codigo}" value="@{tpb}" />
					</combobox>
					<textbox id="bai" value="@{lis.bairro}" width="235px" style="text-transform:uppercase" onOK="lis.pesquisar()"/>
					<button class="btn btn-info" label="Filtrar" width="120px" onClick="lis.pesquisar()"/>
				</row>
			</rows>
		</grid>
		<paging id="paging" pageSize="15" />
		<listbox model="@{lis.lista}" width="886px" height="424px" selectedItem="@{lis.item}" onSelect="lis.selecionar()">
			<listhead>
			 	<listheader width="100px" align="center" label="Insc. Imobiliária"/>
				<listheader width="200px" align="left" label="Logradouro"/>
				<listheader width="70px" align="center" label="Número"/>
				<listheader width="200px" align="left" label="Bairro"/>
				<listheader width="178px" align="left" label="Complemento"/>
				<listheader width="60px" align="center" label="Quadra"/>
				<listheader width="60px" align="center" label="Lote"/>
			</listhead>
			<listitem self="@{each=l}">
				<listcell label="@{l.INSCRICAO}" />
				<listcell label="@{l.LOGRADOURO}" />
				<listcell label="@{l.NUMERO}" />
				<listcell label="@{l.BAIRRO}" />
				<listcell label="@{l.COMPLEMENTO}" />
				<listcell label="@{l.QUADRA}" />
				<listcell label="@{l.LOTE}" />
			</listitem>
		</listbox>
	</window>
</zk>