@CHARSET "ISO-8859-1";

.row{
	padding-top:8px;
}

.cmbzk {
	height:34px;  
    border-color: #CCC;
    border-radius: 4px;
}
	.cmbzk input {
       	height:34px;  
       	background-color: white;
		padding: 6px 12px;
		width: 90%!important;
	}
    .cmbzk i {
      	height:34px!important;  
      	width: 18px!important;
      	background-color: white;
      	border-radius: 0px 4px 4px 0px!important;
		border-top: 1px solid rgb(204, 204, 204)!important;
		border-right: 1px solid rgb(204, 204, 204)!important;
      	background: white url("/integrarweb/zkau/web/imti/img/imti/combobox/cmbzk.gif") no-repeat scroll 3px 12px!important;
    }

.z-listbox {
	border-radius: 4px;
}
.z-textbox, .z-intbox, .z-decimalbox {
	height:34px!important; 
	border-color: #CCC;
    border-radius: 4px;
    text-transform: uppercase;
}
.datezk {
	height:34px;  
    border-color: #CCC;
    border-radius: 4px;
}
	.datezk input {
       	height:34px;  
       	background-color: white;
		padding: 6px 12px;
		text-align: center;
		width: 90%!important;
	}
    .datezk i {
      	height:34px!important;  
      	width: 18px!important;
      	background-color: white;
      	border-radius: 0px 4px 4px 0px!important;
		border-top: 1px solid rgb(204, 204, 204)!important;
		border-right: 1px solid rgb(204, 204, 204)!important;
		background: url("/integrarweb/zkau/web/imti/img/imti/datebox/datezk.gif")!important;
    }
      
.hbox3comp tbody tr td table tbody tr td:nth-child(3) {
	padding-top: 7px;
	padding-left: 4px;
	padding-right: 4px;
}   
 
/* Esses elementos não tem flex */
    header {
    	margin: 0 0 20px;
        background: transparent url('/integrarweb/zkau/web/imti/img/imti/topo/bg-top.png') repeat-x scroll center bottom;
        border-bottom: 2px solid #C8C8C8;
        width:100%;
        height: 85px;
    }
    footer {
    	background-color: #005A89;
    	width:100%;
		height: 90px;
    }
    /* Esses tem */
    /* flex:1 na section faz com que ela expanda na altura (combinado com flex-direction no main) */
    section {
        flex:1;
    }
    main {
        min-height:100vh;
        display:flex;
        flex-direction:column;
    }
    /* Só teremos três colunas quando a largura da janela for maior que 600 pixels. */
    @media screen and (min-width:600px) {
        section {
            display:flex;
        }
    }


    /* Exemplo de tipografia */
    /* tipografia */
    header,footer {
        color:white;
    }