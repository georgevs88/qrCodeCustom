<?page title="Busca de Usuário"?>
<zk xmlns="http://www.zkoss.org/2005/zul"
	xmlns:h="http://www.w3.org/1999/xhtml"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-infabnce"
	xsi:schemaLocation="http://www.zkoss.org/2005/zul http://www.zkoss.org/2005/zul/zul.xsd">
	<window use="pmcg.imti.view.Cadlis" id="lis" title="Usuários" border="normal" shadow="false" width="900px"
		height="580px" position="center" mode="overlapped" sizable="false" closable="true" onCreate="lis.initComponentes()">
		<paging id="paging" pageSize="15" />
		<listbox model="@{lis.lista}" width="886px" height="465px" selectedItem="@{lis.item}" onSelect="lis.selecionar()">
			<listhead>
			 	<listheader width="120px" align="center">
			 		<vbox>
			 			<label value="CPF"/>
			 			<textbox value="@{lis.cpf}" width="95px" style="text-transform:uppercase;text-align:center;" onOK="lis.pesquisar()"/>
			 		</vbox>
			 	</listheader>
				<listheader width="380px" align="left">
					<vbox>
			 			<label value="Nome"/>
			 			<textbox value="@{lis.cad.nomcad}" width="360px" style="text-transform:uppercase" onOK="lis.pesquisar()"/>
			 		</vbox>
				</listheader>
				<listheader align="left">
					<vbox>
			 			<label value="E-mail"/>
			 			<textbox value="@{lis.cad.emacad}" width="360px" style="text-transform:lowercase" onOK="lis.pesquisar()"/>
			 		</vbox>
				</listheader>
			</listhead>
			<listitem self="@{each=l}">
				<listcell label="@{l.cpfFormatado}" />
				<listcell label="@{l.nomcad}" />
				<listcell label="@{l.emacad}" />
			</listitem>
		</listbox>
	</window>
</zk>