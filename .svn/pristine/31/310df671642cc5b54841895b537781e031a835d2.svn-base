<?page title="Busca de Licenças"?>
<zk xmlns="http://www.zkoss.org/2005/zul"
	xmlns:h="http://www.w3.org/1999/xhtml"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-infabnce"
	xsi:schemaLocation="http://www.zkoss.org/2005/zul http://www.zkoss.org/2005/zul/zul.xsd">
	<window use="pmcg.imti.view.Lmalis" id="lis" title="Busca de Licenças" border="normal" shadow="false" width="800px"
		height="580px" position="center" mode="overlapped" sizable="false" closable="true" onCreate="lis.initComponentes()">
		<paging id="paging" pageSize="15" />
		<listbox model="@{lis.lista}" width="785px" height="465px" selectedItem="@{lis.item}" onSelect="lis.selecionar()">
			<listhead>
			 	<listheader width="50px">
					<vbox>
						<label value="Ano" style="text-align:center;"/>
						<textbox value="@{lis.lma.anolma}" onOK="lis.pesquisar()" width="35px" style="text-align:center;text-transform:uppercase"/>
					</vbox>
				</listheader>
				<listheader width="70px">
					<vbox>
						<label value="Nr Licença" style="text-align:center;"/>
						<textbox value="@{lis.lma.numlma}" onOK="lis.pesquisar()" width="50px" style="text-align:center;text-transform:uppercase"/>
					</vbox>
				</listheader>
				<listheader width="120px">
					<vbox>
						<label value="Processo" style="text-align:center;"/>
						<textbox value="@{lis.lma.prolma}" onOK="lis.pesquisar()" style="text-transform:uppercase" width="104px"/>
					</vbox>
				</listheader>
				<listheader width="100px">
					<vbox>
						<label value="Espécie" style="text-align:center;"/>
						<combobox readonly="true" selectedItem="@{lis.lma.esplma}" onSelect="lis.pesquisar()" width="85px">
							<comboitem value="DISPENSA" label="DISPENSA" />
							<comboitem value="LP" label="LP" />
							<comboitem value="LI" label="LI" />
							<comboitem value="LO" label="LO" />
							<comboitem value="LAS" label="LAS" />
						</combobox>
					</vbox>
				</listheader>
				<listheader width="340px">
					<vbox>
						<label value="Requerente" style="text-align:center;"/>
						<textbox value="@{lis.lma.reqlma}" onOK="lis.pesquisar()" style="text-transform:uppercase" width="285px"/>
					</vbox>
				</listheader>
				<listheader>
					<vbox>
						<label value="Emissão" style="text-align:center;"/>
						<datebox value="@{lis.lma.emilma}" onOK="lis.pesquisar()" width="90px"/>
					</vbox>
				</listheader>
			</listhead>
			<listitem self="@{each=l}">
				<listcell label="@{l.anolma}" style="text-align:center;" />
				<listcell label="@{l.numlma}" style="text-align:center;" />
				<listcell label="@{l.prolma}" style="text-align:center;"/>
				<listcell label="@{l.esplma}" style="text-align:center;"/>
				<listcell label="@{l.reqlma}" style="text-align:left;" />
				<listcell label="@{l.emissao}" style="text-align:center;"/>
			</listitem>
		</listbox>
	</window>
</zk>