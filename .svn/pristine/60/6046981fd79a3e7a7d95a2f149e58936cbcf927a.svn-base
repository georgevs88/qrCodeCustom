					<label value="@{mainPage.usuarioNome}" visible="@{mainPage.autenticado}" style="color:white;font-weight: bold;font-size: 16px;"/>  
				</hbox>
				<space width="10px"/>
				<button label="Desconectar" class="btn btn-lg btn-info btn-xs" visible="@{mainPage.autenticado}" onClick="mainPage.desconectarUsuario()" style="margin-top: 12px;"/>
