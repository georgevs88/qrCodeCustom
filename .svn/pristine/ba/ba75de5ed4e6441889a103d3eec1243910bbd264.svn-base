<?page title="Relatório de Requerimento de Licenças" cacheable="false" language="xul/html" zscriptLanguage="Java" contentType="text/html;charset=UTF-8"?>
<zk xmlns="http://www.zkoss.org/2005/zul" xmlns:h="http://www.w3.org/1999/xhtml"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.zkoss.org/2005/zul http://www.zkoss.org/2005/zul/zul.xsd">

	<window use="pmcg.imti.view.Rprrel" id="wRel" title="Relatório de Requerimento de Licenças" width="380px" height="360px" border="normal" shadow="false" position="center"
		mode="overlapped" sizable="false" closable="true" onCreate="wRel.initComponentes()" contentStyle="overflow:auto;">
		<style src="/ext/cimweb_ext.css"></style>
		<grid style="margin:15px">
	    	<columns>
	    		<column align="right" width="100px"/>
	    		<column />
	    	</columns>
	    	<rows>
	    		<row>
	    			<label value="Mês:"/>
					<combobox readonly="true" width="100px" selectedItem="@{wRel.mes}">
						<comboitem value="01" label="Janeiro" />
						<comboitem value="02" label="Fevereiro" />
						<comboitem value="03" label="Março" />
						<comboitem value="04" label="Abril" />
						<comboitem value="05" label="Maio" />
						<comboitem value="06" label="Junho" />
						<comboitem value="07" label="Julho" />
						<comboitem value="08" label="Agosto" />
						<comboitem value="09" label="Setembro" />
						<comboitem value="10" label="Outubro" />
						<comboitem value="11" label="Novembro" />
						<comboitem value="12" label="Dezembro" />
					</combobox>
				</row>
				<row>
	    			<label value="Ano:"/>
					<combobox readonly="true" width="60px" selectedItem="@{wRel.ano}">
						<comboitem value="2017" label="2017" />
						<comboitem value="2016" label="2016" />
						<comboitem value="2015" label="2015" />
						<comboitem value="2014" label="2014" />
						<comboitem value="2013" label="2013" />
						<comboitem value="2012" label="2012" />
						<comboitem value="2011" label="2011" />
						<comboitem value="2010" label="2010" />
						<comboitem value="2009" label="2009" />
						<comboitem value="2008" label="2008" />
						<comboitem value="2007" label="2007" />
						<comboitem value="2006" label="2006" />
						<comboitem value="2005" label="2005" />
						<comboitem value="2004" label="2004" />
						<comboitem value="2003" label="2003" />
						<comboitem value="2002" label="2002" />
						<comboitem value="2001" label="2001" />
						<comboitem value="2000" label="2000" />
						<comboitem value="1999" label="1999" />
					</combobox>
				</row>
	    		<row>
	    			<label value="Modelo:"/>
					<combobox id="modelo" readonly="true" width="190px" selectedItem="@{wRel.modelo}" onSelect="wRel.selectModelo()">
						<comboitem value="LAI" label="Lei de Acesso à Informação" />
						<comboitem value="CMMA" label="CMMA" />
					</combobox>
				</row>
				<row>
	    			<label value="Número Edital:"/>
					<textbox id="nr_edital" value="@{wRel.nr_edital}"/>
				</row>
				<row visible="@{wRel.formatoHTML }">
					<label value="Formato:"/>
					<combobox id="formato" readonly="true" width="190px" selectedItem="@{wRel.formato}" > 
						<comboitem value="PDF" label="PDF" />
						<comboitem value="HTML" label="HTML (EXPORTAR PARA DOC)" />
					</combobox>
				</row>
				<row>
					<label value="Ordenação:"/>
					<combobox id="ordem" readonly="true" width="190px" selectedItem="@{wRel.ordem}">
						<comboitem value="tipo" label="Por Tipo/Data" />
						<comboitem value="data" label="Por Data" />
					</combobox>
				</row>
				<row spans="2">
				<hbox>
				<label value="Para o formato DOC, abrir como HTML, clicar no botão exportar e selecionar a opção WORD." style="color:red" visible="@{wRel.formatoHTML}"/>
				</hbox>
				</row>
			</rows>
		</grid>
		<div align="center">
			<button class="btn-sec" label="Imprimir" onClick="wRel.imprimir()"/>
		</div>
	</window>
</zk>
