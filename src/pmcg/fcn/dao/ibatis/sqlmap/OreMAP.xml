<?xml version="1.0" encoding="UTF-8"?> 
 <!DOCTYPE sqlMap PUBLIC "//iBATIS.com//DTD SQL Map 2.0//EN" "HTTP://ibatis.apache.org/dtd/sql-map-2.dtd" >
<sqlMap namespace="Ore">
	<typeAlias alias="OreVO" type="pmcg.fcn.domain.OreVO" />


	<resultMap id="mapComplexQuerySimple" class="OreVO">
		<result property="iddore" column="iddore" />
		<result property="codore" column="codore" />
		<result property="nomore" column="nomore" />
	</resultMap>

	<resultMap id="mapComplexQuery" class="OreVO">
		<result property="iddore" column="iddore" />
		<result property="codore" column="codore" />
		<result property="nomore" column="nomore" />
	</resultMap>

	<select id="getRegByCod" parameterClass="Long" resultMap="mapComplexQuerySimple">
		SELECT * FROM fcn.fcnore WHERE iddore = #value:NUMERIC#
	</select>

	<select id="getRegByCodComplex" parameterClass="Long" resultMap="mapComplexQuery">
		SELECT * FROM fcn.fcnore WHERE iddore = #value:NUMERIC#
	</select>

	<select id="getRegByCriterio" parameterClass="OreVO"
		resultMap="mapComplexQuerySimple">
		SELECT * FROM fcn.fcnore
		<dynamic prepend=" WHERE ">
			<isNotNull property="iddore" prepend=" AND ">
				iddore = #iddore:NUMERIC#
			</isNotNull>
			<isNotNull property="codore" prepend=" AND ">
				codore ILIKE '%' || #codore:VARCHAR# || '%'
			</isNotNull>
			<isNotNull property="nomore" prepend=" AND ">
				nomore ILIKE '%' || #nomore:VARCHAR# || '%'
			</isNotNull>
		</dynamic>
	</select>

	<select id="getRegByCriterioComplex" parameterClass="OreVO"
		resultMap="mapComplexQuery">
		SELECT * FROM fcn.fcnore
		<dynamic prepend=" WHERE ">
			<isNotNull property="iddore" prepend=" AND "> iddore =
				#iddore:NUMERIC#
			</isNotNull>
			<isNotNull property="codore" prepend=" AND ">
				codore ILIKE '%' || #codore:VARCHAR# || '%'
			</isNotNull>
			<isNotNull property="nomore" prepend=" AND ">
				nomore ILIKE '%' || #nomore:VARCHAR# || '%'
			</isNotNull>
		</dynamic>
	</select>

	<select id="getTodos" resultMap="mapComplexQuerySimple">
		SELECT * FROM fcn.fcnore
	</select>

	<insert id="insReg" parameterClass="OreVO">
		<selectKey keyProperty="iddore" resultClass="Long">
			SELECT NEXTVAL('fcn.seqrcl')
		</selectKey>
		INSERT INTO fcn.fcnore(iddore,codore,nomore) VALUES (#iddore:NUMERIC#,
		UPPER(#codore:VARCHAR#), UPPER(#nomore:VARCHAR#) )
	</insert>

	<update id="updRegByCod" parameterClass="OreVO">
		UPDATE fcn.fcnore SET codore= UPPER(#codore:VARCHAR#),nomore=
		UPPER(#nomore:VARCHAR#) WHERE iddore = #iddore:NUMERIC#
	</update>
	<delete id="delByCod" parameterClass="Long">
		DELETE FROM fcn.fcnore WHERE iddore = #value:NUMERIC#
	</delete>
	<delete id="delByCodigos" parameterClass="String">
		DELETE FROM fcn.fcnore WHERE iddore in ($value$)
	</delete>

	<select id="getCountByCriterio" parameterClass="OreVO"
		resultClass="Integer">
		SELECT count(iddore) FROM fcn.fcnore
		<dynamic prepend=" WHERE ">
			<isNotNull property="iddore" prepend=" AND "> iddore =
				#iddore:NUMERIC#
			</isNotNull>
			<isNotNull property="codore" prepend=" AND ">
				codore ILIKE '%' || #codore:VARCHAR# || '%'
			</isNotNull>
			<isNotNull property="nomore" prepend=" AND ">
				nomore ILIKE '%' || #nomore:VARCHAR# || '%'
			</isNotNull>
		</dynamic>
	</select>
</sqlMap> 
 