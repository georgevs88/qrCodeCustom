<?xml version="1.0" encoding="UTF-8"?> 
 <!DOCTYPE sqlMap PUBLIC "//iBATIS.com//DTD SQL Map 2.0//EN" "HTTP://ibatis.apache.org/dtd/sql-map-2.dtd" >
<sqlMap namespace="Lvs">
	<typeAlias alias="LvsVO" type="pmcg.fcn.domain.LvsVO" />

	<resultMap id="mapComplexQuerySimple" class="LvsVO">
		<result property="iddlvs" column="iddlvs" />
		<result property="epdlvs" column="epdlvs" />
		<result property="veslvs" column="veslvs" />
		<result property="liclvs" column="liclvs" />
		<result property="usualt" column="usualt" />
		<result property="datalt" column="datalt" />
	</resultMap>

	<resultMap id="mapComplexQuery" class="LvsVO">
		<result property="iddlvs" column="iddlvs" />
		<result property="epdlvs" column="epdlvs" />
		<result property="veslvs" column="veslvs" />
		<result property="liclvs" column="liclvs" />
		<result property="usualt" column="usualt" />
		<result property="datalt" column="datalt" />
	</resultMap>

	<select id="getRegByCod" parameterClass="Long" resultMap="mapComplexQuerySimple">
		SELECT * FROM lic.liclvs WHERE iddlvs = #value:NUMERIC#
	</select>

	<select id="getRegByCodComplex" parameterClass="Long" resultMap="mapComplexQuery">
		SELECT * FROM lic.liclvs WHERE iddlvs = #value:NUMERIC#
	</select>

	<select id="getRegByCriterio" parameterClass="LvsVO" resultMap="mapComplexQuerySimple">
		SELECT * FROM lic.liclvs
		<dynamic prepend=" WHERE ">
			<isNotNull property="iddlvs" prepend=" AND ">
				iddlvs = #iddlvs:NUMERIC#
			</isNotNull>
			<isNotNull property="veslvs" prepend=" AND ">
				veslvs = #veslvs:NUMERIC#
			</isNotNull>
			<isNotNull property="liclvs" prepend=" AND ">
				liclvs = #liclvs:NUMERIC#
			</isNotNull>
			<isNotNull property="usualt" prepend=" AND ">
				usualt ILIKE '%' || #usualt:VARCHAR# || '%'
			</isNotNull>
			<isNotNull property="datalt" prepend=" AND "> to_char(datalt,'dd/MM/yyyy') =
				to_char(#datalt:TIMESTAMP#,'dd/MM/yyyy')
			</isNotNull>
		</dynamic>
	</select>

	<select id="getRegByCriterioComplex" parameterClass="LvsVO" resultMap="mapComplexQuery">
		SELECT * FROM lic.liclvs
		<dynamic prepend=" WHERE ">
			<isNotNull property="iddlvs" prepend=" AND "> iddlvs = #iddlvs:NUMERIC#
			</isNotNull>
			<isNotNull property="veslvs" prepend=" AND "> veslvs = #veslvs:NUMERIC#
			</isNotNull>
			<isNotNull property="liclvs" prepend=" AND "> liclvs = #liclvs:NUMERIC#
			</isNotNull>
			<isNotNull property="usualt" prepend=" AND ">
				usualt ILIKE '%' || #usualt:VARCHAR# || '%'
			</isNotNull>
			<isNotNull property="datalt" prepend=" AND "> to_char(datalt,'dd/MM/yyyy') =
				to_char(#datalt:TIMESTAMP#,'dd/MM/yyyy')
			</isNotNull>
		</dynamic>
	</select>

	<select id="getTodos" resultMap="mapComplexQuerySimple">
		SELECT * FROM lic.liclvs
	</select>

	<insert id="insReg" parameterClass="LvsVO">
		<selectKey keyProperty="iddlvs" resultClass="Long">
			SELECT NEXTVAL('lic.seqlvs')
		</selectKey>
		INSERT INTO lic.liclvs(iddlvs,epdlvs,veslvs,liclvs,usualt,datalt) VALUES (#iddlvs:NUMERIC#,#epdlvs:NUMERIC#,#veslvs:NUMERIC#,#liclvs:NUMERIC#,
		UPPER(#usualt:VARCHAR#),now() )
	</insert>

	<update id="updRegByCod" parameterClass="LvsVO">
		UPDATE lic.liclvs SET veslvs= #veslvs:NUMERIC#,liclvs= #liclvs:NUMERIC#,usualt= UPPER(#usualt:VARCHAR#),datalt= now() WHERE
		iddlvs = #iddlvs:NUMERIC#
	</update>
	
	<delete id="delByCod" parameterClass="Long">
		DELETE FROM lic.liclvs WHERE iddlvs = #value:NUMERIC#
	</delete>
	
	<delete id="delByCodigos" parameterClass="String">
		DELETE FROM lic.liclvs WHERE iddlvs in ($value$)
	</delete>

	<select id="getCountByCriterio" parameterClass="LvsVO" resultClass="Integer">
		SELECT count(iddlvs) FROM lic.liclvs
		<dynamic prepend=" WHERE ">
			<isNotNull property="iddlvs" prepend=" AND "> iddlvs = #iddlvs:NUMERIC#
			</isNotNull>
			<isNotNull property="veslvs" prepend=" AND "> veslvs = #veslvs:NUMERIC#
			</isNotNull>
			<isNotNull property="liclvs" prepend=" AND "> liclvs = #liclvs:NUMERIC#
			</isNotNull>
			<isNotNull property="usualt" prepend=" AND ">
				usualt ILIKE '%' || #usualt:VARCHAR# || '%'
			</isNotNull>
			<isNotNull property="datalt" prepend=" AND "> to_char(datalt,'dd/MM/yyyy') =
				to_char(#datalt:TIMESTAMP#,'dd/MM/yyyy')
			</isNotNull>
		</dynamic>
	</select>
</sqlMap> 
 